<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_parent_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/tcv_lin_lay_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tcv_circle_image"
            tools:ignore="HardcodedText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="redditlogo"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/tcv_twitter_name"
            tools:ignore="HardcodedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/tcv_circle_image"
            android:ellipsize="end"
            android:fontFamily="@font/titilliiumbold"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Player Name"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tcv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/tcv_twitter_name"
            android:fontFamily="@font/titilliumregular"
            android:text="27-Apr-19 04:46 PM"
            android:textAlignment="textEnd" />
        <TextView
            android:id="@+id/tcv_twitter_handle"
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/tcv_twitter_name"
            android:layout_toEndOf="@id/tcv_circle_image"
            android:ellipsize="end"
            android:fontFamily="@font/titilliumregular"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="\@PlayerHandle"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tcv_self_text"
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tcv_circle_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/titilliumregular"
            android:maxLines="3"
            android:scrollHorizontally="true"
            android:text="Self Text Self Text Self Text Self Text Self Text Self Text Self Text Self Text Self Text Self TextSelf TextSelf TextSelf Text Self Text Self Text Self Text Self TextSelf Text Self Text Self Text Self Text Self Text Se "
            android:textColor="#515050" />
        <ImageView
            android:id="@+id/tcv_media_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tcv_self_text"
            android:contentDescription="Shows first picture of media" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/tcv_media_image"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/tcv_gotoreddit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titilliiumbold"
                android:text="@string/open_on_twitter"
                android:textAllCaps="false" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>